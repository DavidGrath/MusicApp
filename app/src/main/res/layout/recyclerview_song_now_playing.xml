<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="96dp">

    <TextView
        android:id="@+id/textview_songnp_index"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="111"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textview_songnp_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Song's Title"
        app:layout_constraintBottom_toBottomOf="@+id/textview_songnp_index"
        app:layout_constraintStart_toEndOf="@+id/textview_songnp_index" />

    <TextView
        android:id="@+id/textview_songnp_artist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Song's Artist"
        app:layout_constraintStart_toStartOf="@+id/textview_songnp_title"
        app:layout_constraintTop_toBottomOf="@+id/textview_songnp_title" />
</androidx.constraintlayout.widget.ConstraintLayout>